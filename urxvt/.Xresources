
! ########
! #COLORS#
! ########
URxvt*background:   rgba:0000/0000/0000/cccc
*.foreground:   #cfcfc2
*.cursorColor:  #cfcfc2
! black
*.color0:       #222222
*.color8:       #444444
! red
*.color1:       #dd3344
*.color9:       #ff5555
! green
*.color2:       #22dd55
*.color10:      #44ff77
!yellow
*color3:        #fea63c
*color11:       #ffe863
! blue
*.color4:       #2980b9
*.color12:      #0099ff
! magenta
*.color5:       #8e44ad
*.color13:      #af81ff
! cyan
*.color6:       #27aeae
*.color14:      #31dddd
! white
*.color7:       #acada1
*.color15:      #cfd0c2
! ///////////////////////
URxvt*transparent: false
URxvt*depth: 32
! //////////////////////
! Отключаем scrollBar
URxvt.scrollBar: false

! Устанавливаем шрифты
URxvt.font: xft:Hack:size=10
URxvt.letterSpace: -1

! Копирование и Вставка
URxvt.iso14755:        false
URxvt.iso14755_52:     false

URxvt.clipboard.autocopy: true
URxvt.keysym.Control-P: eval:paste_clipboard
URxvt.keysym.Control-Y: eval:selection_to_clipboard
URxvt.keysym.Control-p: eval:paste_clipboard
URxvt.keysym.Control-y: eval:selection_to_clipboard

! ////////////////////////////////////////////////
! ##############
! #PERL Скрипты#
! ##############

! Ссылки в терминале
! ......................................
URxvt.perl-ext-common: default,matcher,fullscreen,vtwheel
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

URxvt.matcher.rend.0: Uline Bold fg5
! ......................................
! Вкладки
! .....................................
! Для управления вкладками, используйте:
! Клавиши 	Описание
! Shift+Down 	Новая вкладка
! Shift+Left 	Перейти к левой вкладке
! Shift+Right 	Перейти к правой вкладке
! Ctrl+Left 	Переместить вкладку влево
! Ctrl+Right 	Переместить вкладку вправо
! Ctrl+d 	Закрыть вкладку

!URxvt.perl-ext-common: ...,tabbed,...

! Цвета вкладок
!URxvt.tabbed.tabbar-fg: 8
!URxvt.tabbed.tabbar-bg: background
!URxvt.tabbed.tab-fg: 4
!URxvt.tabbed.tab-bg: 0

! .....................................

! Полноэкранный режим
!URxvt.perl-ext-common: ..., fullscreen, ...
URxvt.keysym.F11: perl:fullscreen:switch

