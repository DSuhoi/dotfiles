
! ########
! #COLORS#
! ########
URxvt*background:   rgba:0000/0000/0000/cccc
*.foreground:   #dddddd
*.cursorColor:  #dddddd

*.color0:       #111111
*.color1:       #cc0403
*.color2:       #19cb00
*.color3:       #cecb00
*.color4:       #0d73cc
*.color5:       #8e44ab
*.color6:       #0dcdcd
*.color7:       #dddddd

*.color8:       #808080
*.color9:       #f2201f
*.color10:      #23fd00
*.color11:      #fffd00
*.color12:      #1a8fff
*.color13:      #ff00ff
*.color14:      #14ffff
*.color15:      #ffffff
! ///////////////////////
URxvt*transparent: false
URxvt*depth: 32
! //////////////////////
! Отключаем scrollBar
URxvt.scrollBar: false

! Устанавливаем шрифты
URxvt*font: xft:Terminus:regular:size=14
URxvt.letterSpace: -1

! Копирование и Вставка
URxvt.iso14755:        false
URxvt.iso14755_52:     false

URxvt.clipboard.autocopy: true
URxvt.keysym.Control-P: eval:paste_clipboard
URxvt.keysym.Control-Y: eval:selection_to_clipboard
URxvt.keysym.Control-p: eval:paste_clipboard
URxvt.keysym.Control-y: eval:selection_to_clipboard

! ////////////////////////////////////////////////
! ##############
! #PERL Скрипты#
! ##############

! Ссылки в терминале
! ......................................
URxvt.perl-ext-common: default,matcher,fullscreen,vtwheel,xresources-256
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

URxvt.matcher.rend.0: Uline Bold fg5
! ......................................
! Вкладки
! .....................................
! Для управления вкладками, используйте:
! Клавиши 	Описание
! Shift+Down 	Новая вкладка
! Shift+Left 	Перейти к левой вкладке
! Shift+Right 	Перейти к правой вкладке
! Ctrl+Left 	Переместить вкладку влево
! Ctrl+Right 	Переместить вкладку вправо
! Ctrl+d 	Закрыть вкладку

!URxvt.perl-ext-common: ...,tabbed,...

! Цвета вкладок
!URxvt.tabbed.tabbar-fg: 8
!URxvt.tabbed.tabbar-bg: background
!URxvt.tabbed.tab-fg: 4
!URxvt.tabbed.tab-bg: 0

! .....................................

! Полноэкранный режим
!URxvt.perl-ext-common: ..., fullscreen, ...
URxvt.keysym.F11: perl:fullscreen:switch

! Колесо прокрутки
!URxvt.perl-ext-common:  ...,vtwheel,...

