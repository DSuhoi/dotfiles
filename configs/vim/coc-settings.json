    "diagnostic-languageserver.formatters": {
        "black": {
            "command": "black",
            "args": [
                "-q",
                "-"
            ]
        },
        "isort": {
            "command": "isort",
            "args": [
                "-q",
                "-"
            ]
        }
    },
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        "c": "clang",
        "cpp": "clang",
        "python": "flake8"
    },
    "diagnostic-languageserver.formatFiletypes": {
        "python": [
            "black",
            "isort"
        ],
        "c": "clang-format",
        "cpp": "clang-format"
    }
